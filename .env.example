# ============================================
# Kubera AI Trading System - Environment Variables
# ============================================

# === LLM API (OpenRouter) ===
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# === Telegram Bot ===
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=your-telegram-chat-id-here
# Get chat ID from: https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates

# === Alpaca Trading (PAPER TRADING) ===
ALPACA_API_KEY=your-alpaca-paper-api-key
ALPACA_SECRET_KEY=your-alpaca-paper-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
# IMPORTANT: Use paper trading URL above, NOT live trading!

# === Market Data APIs ===
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here
# Get free key: https://www.alphavantage.co/support/#api-key

# === Database (Supabase) ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# === Railway Deployment ===
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_TOKEN=your-railway-token
PORT=8000

# === Autonomous Trading Settings ===
AUTONOMOUS_MODE=true
DRY_RUN_MODE=true  # Set to false to actually execute trades
ENVIRONMENT=development  # development, staging, production

# === Safety Limits ===
MAX_DAILY_TRADES=20
MAX_POSITION_SIZE_PCT=15
MAX_DAILY_LOSS_PCT=5
MIN_CASH_RESERVE_PCT=20
MAX_STOCKS_PER_DAY=10
MIN_STOCK_VOLUME=1000000
MIN_CONSENSUS_LEVEL=0.70

# === Model Configuration ===
# Models to use (comma-separated)
ENABLED_MODELS=claude,gpt5,gemini,deepseek,qwen

# Model IDs for OpenRouter
MODEL_CLAUDE=anthropic/claude-sonnet-4-5
MODEL_GPT5=openai/gpt-5
MODEL_GEMINI=google/gemini-2.5-pro
MODEL_DEEPSEEK=deepseek/deepseek-chat-v3.1
MODEL_QWEN=qwen/qwen3-max

# === Trading Schedule (Eastern Time) ===
PREMARKET_SCREENING_TIME=09:00
MARKET_OPEN_TIME=09:30
MIDDAY_UPDATE_TIME=12:00
MARKET_CLOSE_TIME=16:00

# === Monitoring & Logging ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
SENTRY_DSN=your-sentry-dsn-here  # Optional, for error tracking
ENABLE_PERFORMANCE_TRACKING=true

# === Redis (Optional, for caching) ===
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS_CACHE=false

# === Advanced Settings ===
MAX_RETRIES=3
RETRY_DELAY=1.0
API_TIMEOUT=30
RATE_LIMIT_CALLS_PER_MINUTE=60

# === Feature Flags ===
ENABLE_NEWS_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_FUNDAMENTAL_ANALYSIS=true
ENABLE_TECHNICAL_ANALYSIS=true
ENABLE_RISK_DEBATE=true
